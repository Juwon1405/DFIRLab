{
  "builders": [
    {
      "type": "vmware-iso",
      "name": "template-Debian10",
      "vm_name": "template-Debian10",
      "cpus":"4",
      "memory":"2048",
      "Version": "12",
      "guest_os_type": "debian10-64",
      "vmx_data": {
        "ethernet0.networkName": "<portgroup>",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.present": "TRUE",
        "virtualHW.version": "10",
        "scsi0.virtualDev": "lsisas1068"
      },

      "remote_type": "esx5",
      "remote_host": "<esxi_host>",
      "remote_username": "<esxi_user>",
      "remote_password": "<esxi_password>",
      "remote_datastore": "<esxi_datastore>",
      "skip_validate_credentials": true,
      "format": "ova",
      "output_directory": "../ova/",

      "iso_url": "../ISO/debian-10.5.0-amd64-netinst.iso",
      "iso_checksum": "md5:a3ebc76aec372808ad80000108a2593a",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "<enter><wait>"
      ],
      "http_directory": "http",
      "ssh_username":"ansible",
      "ssh_private_key_file":"../FILES/ansible.key",
      "ssh_keypair_name":"ansible.key",
      "ssh_wait_timeout": "1800s",

      "shutdown_command": "echo Packer | sudo -S shutdown -P now",
      "headless": true,
      "vnc_disable_password": true,
      "vnc_bind_address": "127.0.0.1",
      "keep_registered": true
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt update && sudo apt upgrade -y",
        "sudo apt install -y open-vm-tools htop net-tools"
        ]
    }
  ]
}
